<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/getusers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <TextView
        android:id="@+id/tv_username_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/tv_username" />
    
    <Button
        android:id="@+id/btn_addparty"
        style="@style/ButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username_menu"
        android:background="@drawable/blackbutton"
        android:drawableLeft="@drawable/ic_add"
        android:onClick="gotoAddParty"
        android:text="@string/btn_AddParty" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_addparty"
        android:layout_below="@+id/btn_addparty"
        android:text="@string/btn_Search" 
        android:onClick="gotoSearch"
        android:drawableLeft="@drawable/ic_search"
        style="@style/ButtonText"
        android:background="@drawable/greenbutton"
        />

    <Button
        android:id="@+id/btn_parties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_search"
        android:layout_below="@+id/btn_search"
        android:text="@string/btn_Parties" 
        android:onClick="gotoParties"
        android:drawableLeft="@drawable/ic_a_stiff_drink"
        style="@style/ButtonText"
        android:background="@drawable/bluebutton"
        />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_parties"
        android:layout_below="@+id/btn_parties"
        android:text="@string/btn_Profile" 
        android:onClick="gotoProfile"
        android:drawableLeft="@drawable/ic_settings"
        style="@style/ButtonText"
        android:background="@drawable/redbutton"
        />

</RelativeLayout>