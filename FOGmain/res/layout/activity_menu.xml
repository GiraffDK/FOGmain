<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/getusers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity"
    android:orientation="vertical"
     >
    
    <TextView
        android:id="@+id/tv_username_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/tv_username"
        style="@style/mediumTextSize"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        >

        <TableRow
			android:id="@+id/tableRow1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
            
            <Button
			android:id="@+id/btn_addparty"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:drawableTop="@drawable/add"
			android:onClick="gotoAddParty"
			android:text="@string/btn_AddParty"
			style="@style/menubuttons"
			android:background="@drawable/menubuttons"
			/>
            
            <Button
			android:id="@+id/btn_search"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:text="@string/btn_Search" 
			android:onClick="gotoSearch"
			android:drawableTop="@drawable/search"
			style="@style/menubuttons"
			android:background="@drawable/menubuttons"
			/>
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <Button
			android:id="@+id/btn_parties"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:text="@string/btn_Parties" 
			android:onClick="gotoParties"
			android:drawableTop="@drawable/map_pin"
			style="@style/menubuttons"
			android:background="@drawable/menubuttons"
			/>
            
            <Button
			android:id="@+id/btn_profile"
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:text="@string/btn_Profile" 
			android:onClick="gotoProfile"
			android:drawableTop="@drawable/id_card"
			style="@style/menubuttons"
			android:background="@drawable/menubuttons"
        	/>
            
        </TableRow>
    </TableLayout>

</LinearLayout>