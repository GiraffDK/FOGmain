<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".ShowPartyRequesters"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/AddEditActivityScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
        >
        
 		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical" >

	         <TextView
	             android:id="@+id/tv_show_requesters_showpartyrequesters"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:text="Requests"
	             android:textAppearance="?android:attr/textAppearanceLarge" />
	
	         <ListView
	             android:id="@+id/lv_requesters_showpartyrequesters"
	             android:layout_width="match_parent"
	             android:layout_height="180dp"
	             android:background="#eeeeee"
				 android:layout_marginTop="10dp"
				>
	         </ListView>
	         
	         <TextView
	             android:id="@+id/tv_show_denied_showpartyrequesters"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:text="Denied"
	             android:textAppearance="?android:attr/textAppearanceLarge" 
	             android:layout_marginTop="10dp"
	             />
			
			<ListView
	             android:id="@+id/lv_denied_showpartyrequesters"
	             android:layout_width="match_parent"
	             android:layout_height="180dp"
	             android:background="#eeeeee" 
	             android:layout_marginTop="10dp"
	             >
	         </ListView>
 		</LinearLayout>
 	</ScrollView>
 </RelativeLayout>