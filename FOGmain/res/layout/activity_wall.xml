<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WallActivity" 
    >

    <TextView
        android:id="@+id/under_dev_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This section is currently under development"
        android:textStyle="bold"
        />
    
    <ScrollView 
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        >
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_horizontal"
		    >
		    <LinearLayout
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center_horizontal"
	    		android:layout_marginTop="10dp"
	    		android:padding="5dp"
	    		android:background="#eee"
			    >
			    
				<TextView
				    android:id="@+id/user_name_wall_mv"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Mikael Vanggaard (2013-05-15 13:53:10)"
				    android:textColor="#b01319"
	                android:textStyle="bold"
				    />
	
				<TextView
				    android:id="@+id/message_wall_mv"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Kevin - nope! Allan, me2!!" />
        	</LinearLayout>
		    <LinearLayout
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center_horizontal"
	    		android:layout_marginTop="10dp"
	    		android:padding="5dp"
	    		android:background="#eee"
			    >
			    
				<TextView
				    android:id="@+id/user_name_wall_ae"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Allan Ellegaard (2013-05-15 13:23:30)"
				    android:textColor="#b01319"
	                android:textStyle="bold"
				    />
	
				<TextView
				    android:id="@+id/message_wall_ae"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="I like beer!!" />
        	</LinearLayout>
			<LinearLayout
			    android:orientation="vertical"
			    android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center_horizontal"
	    		android:layout_marginTop="10dp"
	    		android:padding="5dp"
	    		android:background="#eee"
			    >
			    
				<TextView
				    android:id="@+id/user_name_wall_kho"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Kevin H. Olsen (2013-05-15 12:31:32)"
				    android:textColor="#b01319"
	                android:textStyle="bold"
				    />
	
				<TextView
				    android:id="@+id/message_wall_kho"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="Hi, can I bring some awesome music to the party?!" />
        	</LinearLayout>
        </LinearLayout>
    </ScrollView>
    

</LinearLayout>